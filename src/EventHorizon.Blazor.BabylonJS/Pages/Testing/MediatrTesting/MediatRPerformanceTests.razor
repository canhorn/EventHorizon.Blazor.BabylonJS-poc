@using System.Diagnostics
@using EventHorizon.Blazor.BabylonJS.Pages.Testing.MediatrTesting.Model

<div>
    <h3>Mediatr Published Event Testing</h3>
    <div>
        @($"{StandardSendEventTimeTaken.Ticks} Ticks ({StandardSendEventTimeTaken.Ticks / _max} Ticks)")
    </div>
    <div>
        @($"{StandardSendEventTimeTaken.TotalMilliseconds} ms ({StandardSendEventTimeTaken.TotalMilliseconds / _max} ms)")
    </div>
    <div>
        @($"{_max / (StandardSendEventTimeTaken.TotalMilliseconds / 1000)} AP/s")
    </div>
    <div>
        @($"{_max / StandardSendEventTimeTaken.TotalMilliseconds} AP/ms")
    </div>
    <div>
        @($"{(_max / (StandardSendEventTimeTaken.TotalMilliseconds)) * 16} AP/frame") (16ms/frame)
    </div>
    <button @onclick="HandleRunPerformanceCall_StandardSendEvent">Run</button>
</div>

@code {
    [Inject]
    public MediatR.IMediator Mediator { get; set; }

    public TimeSpan StandardSendEventTimeTaken { get; set; }

    const int _max = 10_000;
    public async Task HandleRunPerformanceCall_StandardSendEvent()
    {
        var s1 = Stopwatch.StartNew();
        for (int i = 0; i < _max; i++)
        {
            await StandardSendEvent();
        }
        s1.Stop();
        StandardSendEventTimeTaken = s1.Elapsed;
        Console.WriteLine(((double)(s1.ElapsedMilliseconds * 1000000) / _max).ToString("0.00 ns"));
    }

    public async Task StandardSendEvent()
    {
        await Mediator.Publish(
            new RunMediatrEvent()
        ); ;
    }
}