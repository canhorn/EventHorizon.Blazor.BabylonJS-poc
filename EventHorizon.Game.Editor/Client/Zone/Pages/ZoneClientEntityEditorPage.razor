@page "/zone/client-entity"
@page "/zone/client-entity/{clientEntityId}"
@using EventHorizon.Game.Editor.Client.Zone.Components.EntityEditor
@layout ViewHeightLayout
@inherits ZoneClientEntityEditorPageModel

<ZoneStateProvider>
    @if (string.IsNullOrWhiteSpace(ClientEntityId))
    {
        <ClientEntityList />
    }
    else
    {
        <ClientEntityProvider ClientEntityId="@ClientEntityId">
            <ObjectEntityEditor />
        </ClientEntityProvider>
    }
</ZoneStateProvider>
