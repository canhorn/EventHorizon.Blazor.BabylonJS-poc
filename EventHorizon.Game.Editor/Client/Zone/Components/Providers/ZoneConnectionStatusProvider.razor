@inherits ZoneConnectionStatusProviderModel

<StandardModal IsOpen="!string.IsNullOrEmpty(ConnectionDisconnectionCode)"
               HideClose="true">
    <Header>
        <h2 class="disconnected__header">
            @Localizer["Connection Lost"]
        </h2>
    </Header>
    <Body>
        <p class="disconnected__reason">
            @Localizer["Disconnection Code:[{0}]", ConnectionDisconnectionCode]
        </p>
        <a href="#reload-page" @onclick="HandleReloadPage">
            @Localizer["Reload Page?"]
        </a>
    </Body>
</StandardModal>

<StandardModal IsOpen="IsReconnecting"
               HideClose="true">
    <Header>
        <div class="reconnecting-modal__content" role="alert">
            <h3>
                @Localizer["Reconnecting to Zone Server..."]
            </h3>
        </div>
    </Header>
</StandardModal>
