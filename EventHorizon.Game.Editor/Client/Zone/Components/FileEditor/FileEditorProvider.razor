@inherits FileEditorProviderModel

<TransitionContainerComponent State="DisplayState">
    <LoadingFragment>
        <Loading Text="@GetLoadingText()" ShowLongLoadingIndicator="!IsCompiling" />
    </LoadingFragment>
    <ContentFragment>
        <CascadingValue Value="Settings">
            <CascadingValue Value="State">
                @ChildContent
            </CascadingValue>
        </CascadingValue>
    </ContentFragment>
    <ErrorFragment>
        <div>
            <div>
                ErrorMessage: @ErrorMessage
            </div>

            <div>
                ZoneState ID: @ZoneState.Zone.Id
            </div>

            <div>
                EncodedFileNodeId: @EncodedFileNodeId
            </div>

            <div>
                FileNodeId: @EncodedFileNodeId.Base64Decode()
            </div>
        </div>
    </ErrorFragment>
</TransitionContainerComponent>
