@using EventHorizon.Game.Editor.Client.Zone.ClientEntity.Components
@using EventHorizon.Game.Editor.Client.Zone.ClientEntity.Components.Toolbars

<div class="entity-list">
    <div class="entity-list__section">
        <h2 data-test-selector="client-entity-list__header">@Localizer["Client Entity List"]</h2>
        <ClientEntityToolbar />
        <ClientEntityList />
    </div>

    <div class="entity-list__section">
        <h2 data-test-selector="agent-entity-list__header">@Localizer["Agent Entity List"]</h2>
        <AgentEntityToolbar />
        <AgentEntityList />
    </div>
</div>

@code {
    [Inject]
    public Localizer<SharedResource> Localizer { get; set; } = null!;
}
