@using EventHorizon.Game.Editor.Client.Shared.ClickCapture
@using EventHorizon.Game.Editor.Client.Wizard.Components.Provider
@using EventHorizon.Game.Editor.Client.ErrorBoundary.Providers
@using EventHorizon.Game.Editor.Client.AssetManagement.Components.Providers

<ErrorBoundaryProvider>
    <ClickCaptureProvider>
        <EditorAuthenticationProvider>
            <ZoneSelectionProvider>
                <WizardStateProvider>
                    <AssetManagementProvider>
                        <ArtifactManagementProvider>
                            @ChildContent
                            <ZoneConnectionStatusProvider />
                        </ArtifactManagementProvider>

                    </AssetManagementProvider>
                </WizardStateProvider>
            </ZoneSelectionProvider>
        </EditorAuthenticationProvider>
    </ClickCaptureProvider>
</ErrorBoundaryProvider>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
}
