@page "/authentication/{action}"
@code {
    public static string Route(string action) => $"/authentication/{action}";
    public static string Route(string action, string returnUrl) => $"{Route(action)}?returnUrl={Uri.EscapeDataString(returnUrl)}";
}

@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@layout AuthenticationLayout

<RemoteAuthenticatorView Action="@Action">
    <LogOutSucceeded>
        @Localizer["You have been logged out."]
        <DisplayLoginStatus LoginDisplayText="@Localizer["Log Back In?"]" />
    </LogOutSucceeded>
</RemoteAuthenticatorView>

@code {
    [Parameter]
    public string Action { get; set; } = string.Empty;

    [Inject]
    public Localizer<SharedResource> Localizer { get; set; } = null!;

}