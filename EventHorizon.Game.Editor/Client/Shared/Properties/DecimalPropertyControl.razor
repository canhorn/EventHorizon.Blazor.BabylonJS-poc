@inherits PropertyControlBase

<div class="decimal-property">
    @if (ShowRemove)
    {
        <label class="--font-bold --cursor-pointer"
               title="@Localizer["Remove"]">
            <button class="c-button --text"
                    type="button"
                    @onclick="HandleRemove">
                &#10060
            </button>
            @LabelText
        </label>
    }
    else
    {
        <label class="--font-bold">
            @LabelText
        </label>
    }

    <input class="--text-input"
           type="number"
           step="0.01"
           value="@Property"
           @onchange="HandleChange" />
</div>

<style>
    .decimal-property {
    }

        .decimal-property .--text-input {
            width: 100%;
        }
</style>

@code {
    protected override object Parse(object value)
    {
        return decimal.Parse(
            value.To<string>() ?? "0"
        );
    }
}
