@inherits StandardSelectModel

<select class="standard-select"
        value="@SelectedValue"
        @onchange="@HandleSelectChanged"
        disabled="@IsDisabled">
    @foreach (var option in Options)
    {
        <option value="@option.Value"
                disabled="@option.Disabled"
                hidden="@option.Hidden">
            @option.Text
        </option>
    }
</select>
