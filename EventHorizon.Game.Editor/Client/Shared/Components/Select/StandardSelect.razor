@inherits StandardSelectModel

<select class="c-select"
        value="@SelectedValue"
        @onchange="@HandleSelectChanged"
        disabled="@IsDisabled">
    @foreach (var option in Options)
    {
        <option value="@option.Value">@option.Text</option>
    }
</select>

<style>
    .c-select {
        color: #393939;
        border: 1px solid lightblue;
        box-shadow: 0.1em 0.1em rgba(0, 0, 0, 0.12);
        background-color: #fff;
        display: block;
        font-size: inherit;
        font-family: sans-serif;
        font-weight: 700;
        line-height: 1.3;
        padding: 0.6em 1.4em 0.5em 0.8em;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
        margin: 0;
        border-radius: 0;
    }

        .c-select::-ms-expand {
            display: none;
        }

        .c-select:hover {
            border-color: #888;
        }

        .c-select option {
            font-weight: normal;
        }

        .c-select:disabled {
            opacity: 1;
            background-color: rgba(0, 0, 0, 0.38);
        }
</style>