@inherits LayoutComponentBase

<div class="three-split-page @BladesCssClass">
    <div class="three-split-page__blades @BladesCssClass">
        <EditorBladeSelection OnToggleExpand="HandleToggleExpandOnBlades" />
        <QuickLinks />
        <DisplayLoginStatus />
        <ZoneSelection SelectionDisplay="SELECT" />
    </div>

    <div class="three-split-page__main">
        <div class="three-split-page__content">
            @Body
        </div>
    </div>

    <aside class="three-split-page__aside">
        <BladeSelection Id="three-split-page" />
    </aside>
</div>

@code {

    private bool expandedBlade = false;

    private string BladesCssClass => expandedBlade ? "--expanded" : null;

    public void HandleToggleExpandOnBlades()
    {
        expandedBlade = !expandedBlade;
    }
}