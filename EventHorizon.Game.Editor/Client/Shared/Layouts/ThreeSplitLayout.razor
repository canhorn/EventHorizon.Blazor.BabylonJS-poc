@inherits LayoutComponentBase

<PlatformUserProvider>
    <div class="page">
        <div class="page__grid">
            <div class="page__top-bar">
                <MenuBar />
            </div>
            <div class="page__nav --screen-left">
                <NavigationBase />
            </div>
            <div class="page__main">
                <AlphaBanner />
                <div class="page__content">
                    <AnimateOnLocationChanged>
                        @Body
                    </AnimateOnLocationChanged>
                </div>
            </div>
            <aside class="page__aside --screen-right" data-test-selector="aside-blade-selection">
                <BladeSelection Id="three-split-page" />
            </aside>
        </div>
    </div>
</PlatformUserProvider>
